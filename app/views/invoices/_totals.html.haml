.panel.panel-default
  .panel-heading
    %h3.panel-title Invoiced
  .panel-body
    %ul
      %li= "Total income: #{number_to_currency invoices.to_a.sum(&:total_price)}"
      %li= "Total tax income: #{number_to_currency(invoices.to_a.sum(&:tax_price))}"
      %li= "Total net income: #{number_to_currency invoices.sum(:net_price)}"


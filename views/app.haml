!!!
%html{ lang: 'en' }
    %head
        %title= "Fousa - #{@app.title}"

        = render :haml, :'partials/head'

        %link{ rel: 'stylesheet', href: '/css/page.css' }
        %link{ rel: 'stylesheet', href: '/css/app.css' }

    %body
        .page 
            .container-fluid
                -# Header
                .row.text-center.header
                    %a{ href: '/' }
                        %img{ src: '/images/fousa.svg' }
                        %h1 fousa
                
                -# Sub header
                .row.text-center
                    .col-12
                        %h2
                            = @app.title.upcase
                            %span= @app.subtitle.upcase
                
                .row.text-center
                    .col-12
                        %p.link
                            - if @app.respond_to?(:mac_app_store_link)
                                %a{ href: @app.mac_app_store_link }
                                    %img{ src: '/images/mac_app_store.svg' }
                            - elsif @app.respond_to?(:app_store_link)
                                %a{ href: @app.app_store_link }
                                    %img{ src: '/images/app_store.svg' }

                -# Description
                .row.justify-content-center
                    .col-12
                        %p.description= @app.description

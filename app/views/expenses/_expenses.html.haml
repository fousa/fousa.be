%table.table.table-hover.table-bordered
  %thead
    %tr
      %th
      %th.right Issued at
      %th Description
      %th.right Total price
      %th.hidden-xs.right Tax price
      %th.hidden-xs

  %tbody
    - expenses.each do |expense|
      %tr{ id: "expense-#{expense.id}" }
        - if expense.document.file.exists?
          %td= export_image_tag expense.document.url
        - else
          %td
        %td.right= l expense.issued_at, format: :long
        %td
          - if expense.complete?
            = expense.description
          - else
            %span.label.label-danger= expense.description
        %td.right= number_to_currency expense.total_price
        %td.hidden-xs.right= number_to_currency expense.tax_price
        %td.hidden-xs
          = link_to 'edit', edit_expense_path(expense), remote: true
          = '-'
          = link_to 'destroy', expense, method: :delete, remote: true, data: { confirm: 'Are you sure?' }


<% if @invoice.valid? %>
  $('#invoices-totals').html("<%= escape_javascript(render(partial: 'invoices/totals', locals: { invoices: @invoices })) %>");
  $('#invoices').html("<%= escape_javascript(render(partial: 'invoices/invoices', locals: { invoices: @invoices })) %>");
  <% if params[:invoice][:another] == '1' %>
    <% @invoice = Invoice.new({ another: '1' }) %>
    $("#form_modal .modal-body").html("<%= escape_javascript(render 'form') %>");
  <% else %>
    $('#form_modal').modal('hide')
  <% end %>
<% else %>
  $("#form_modal .modal-body").html("<%= escape_javascript(render 'form') %>");
<% end %>

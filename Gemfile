source 'https://rubygems.org'

# Rake is a Make-like program implemented in Ruby. Tasks and dependencies are
# [rake](https://github.com/ruby/rake)
gem "rake", "~> 13.0.2"
# Sinatra is a DSL for quickly creating web applications in Ruby with minimal 
# [sinatra](http://sinatrarb.com/)
gem "sinatra", "~> 2.1.0"
# Collection of useful Sinatra extensions
# [sinatra-contrib](http://sinatrarb.com/contrib/)
gem "sinatra-contrib", "~> 2.1.0"
# Haml (HTML Abstraction Markup Language) is a layer on top of HTML or XML tha
# [haml](http://haml.info)
gem "haml", "~> 5.2.1"
# Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for 
# [puma](https://puma.io)
gem "puma", "~> 5.1.1"
# A gem that provides a client interface for the Sentry error logger
# [sentry-raven](https://github.com/getsentry/raven-ruby)
gem "sentry-raven", "~> 3.1.1"

group :test do
    # BDD for Ruby
    # [rspec](http://github.com/rspec)
    gem "rspec", "~> 3.10.0"
    # Rack::Test is a small, simple testing API for Rack apps. It can be used on i
    # [rack-test](http://github.com/rack-test/rack-test)
    gem "rack-test", "~> 1.1.0"
end
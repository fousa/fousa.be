<% if @customer.valid? %>
  $('#customers').html("<%= escape_javascript(render(partial: 'customers/customers', locals: { customers: @customers })) %>");
  <% if params[:customer][:another] == '1' %>
    <% @customer = Customer.new({ another: '1' }) %>
    $("#form_modal .modal-body").html("<%= escape_javascript(render 'form') %>");
  <% else %>
    $('#form_modal').modal('hide')
  <% end %>
<% else %>
  $("#form_modal .modal-body").html("<%= escape_javascript(render 'form') %>");
<% end %>
